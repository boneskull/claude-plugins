{
  "name": "claude-watcher-plugin",
  "version": "0.0.0",
  "type": "module",
  "description": "Event-driven automation daemon for Claude Code",
  "private": true,
  "workspaces": [
    "hooks"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "bin": {
    "claude-watcher": "dist/bin/claude-watcher.js"
  },
  "main": "dist/mcp-server.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "prepare": "npm run clean && npm run build",
    "pretest": "npm run build",
    "test": "node --test --test-reporter spec dist/__test__/*.test.js",
    "test:triggers": "node --test --test-reporter spec dist/__test__/*.manual-test.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.2",
    "better-sqlite3": "12.5.0",
    "ms": "2.1.3",
    "yaml": "2.8.2",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/ms": "2.1.0",
    "@types/node": "22.15.21",
    "bupkis": "0.14.0",
    "typescript": "5.9.3"
  }
}
