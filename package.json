{
  "name": "@boneskull/claude-plugins",
  "version": "0.4.0",
  "type": "module",
  "description": "World's greatest marketplace for Claude Code plugins",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/claude-plugins.git"
  },
  "author": "Christopher Hiller <boneskull@boneskull.com>",
  "license": "BlueOak-1.0.0",
  "private": true,
  "workspaces": [
    "plugins/*"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "plugins",
    "marketplace"
  ],
  "scripts": {
    "commitlint": "commitlint",
    "fix": "run-s -sl \"fix:*\"",
    "fix:eslint": "eslint --fix .",
    "fix:markdown": "markdownlint-cli2 --fix \"**/*.md\"",
    "fix:pkg": "npm pkg fix",
    "fix:prettier": "prettier --write .",
    "lint": "npm run lint:prettier && npm run lint:markdown",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint .",
    "lint:knip": "knip",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
    "lint:prettier": "prettier --check .",
    "lint:spelling": "cspell . \"./.*/**\"",
    "lint:types": "tsc --noEmit",
    "prepare": "husky",
    "test": "exit 0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.39.1",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/node": "24.10.1",
    "cspell": "9.3.2",
    "eslint": "9.39.1",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-perfectionist": "4.15.1",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "knip": "5.70.1",
    "lint-staged": "16.2.6",
    "markdownlint-cli2": "0.19.0",
    "markdownlint-cli2-formatter-pretty": "0.0.9",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.5.0",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sort-json": "4.1.1",
    "typescript": "5.9.3"
  },
  "knip": {
    "ignoreDependencies": [
      "markdownlint-cli2-formatter-pretty"
    ],
    "ignore": [
      "**/*.d.ts",
      ".worktrees/**/*"
    ],
    "tags": [
      "-knipignore"
    ]
  },
  "lint-staged": {
    "*.{ts,js,yml,json5}": [
      "eslint --fix",
      "prettier --write",
      "cspell lint --no-must-find-files"
    ],
    "**/!(package-lock).json": [
      "eslint --fix",
      "prettier --write",
      "cspell lint --no-must-find-files"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write",
      "cspell lint --no-must-find-files"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-pkg",
      "prettier-plugin-sort-json"
    ],
    "jsdocCommentLineStrategy": "keep",
    "jsdocPreferCodeFences": true,
    "tsdoc": true
  }
}
