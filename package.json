{
  "name": "@boneskull/claude-plugins",
  "version": "0.2.0",
  "description": "World's greatest marketplace for Claude Code plugins",
  "private": true,
  "type": "module",
  "scripts": {
    "commitlint": "commitlint",
    "fix": "npm run fix:prettier && npm run fix:markdown",
    "fix:prettier": "prettier --write .",
    "fix:markdown": "markdownlint-cli2 --fix \"**/*.md\"",
    "lint": "npm run lint:prettier && npm run lint:markdown",
    "lint:prettier": "prettier --check .",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
    "test": "exit 0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "husky": "9.1.7",
    "markdownlint-cli2": "0.19.0",
    "markdownlint-cli2-formatter-pretty": "0.0.9",
    "prettier": "3.6.2"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "keywords": [
    "claude",
    "claude-code",
    "plugins",
    "marketplace"
  ],
  "author": "Christopher Hiller <boneskull@boneskull.com>",
  "license": "BlueOak-1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/claude-plugins.git"
  }
}
